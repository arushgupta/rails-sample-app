<div class="conference">
  
  <div class = "row header-title-bg" style = "margin: 2% 0% 3% 0%;">
    <div class="col-lg-12 text-center about-header-img">
      <h2 class = "section-heading"><%= @category.name %></h2>
      <h3 class = "section-subheading text-muted"><%= @category.subheading %></h3>
    </div>
  </div>

  <div class = "conference_row conference_row_2">
    <%@pages.each do |page|%>
      <div class = "conference_column conference_column_1_3">
        <div class = "conference_blurb conference_module conference_heading_text_center">
          <div class = "conference_blurb_content">
            <div class = "conference_blurb_image">
              <%begin%>
                <%= link_to image_tag(page.page_icon_url.url, alt: "page-icon.png"),page_path(page, id: page) %>
              <%rescue%>
                <%= link_to image_tag("conference-1.jpg", alt: "logo"),page_path(page, id: page) %>
              <%end%>
            </div>
            <div class = "conference_blurb_container">
              <h4><%= link_to page.name, page_path(page,id: page.id) %></h4>
            </div>
          </div>
        </div>
      </div>
    <%end%>
    <div class = "conference_column conference_column_1_3">
      <div class = "conference_blurb conference_module conference_heading_text_center">
        <div class = "conference_blurb_content">
          <div class = "conference_blurb_image">
           <%begin%>
              <%= link_to image_tag(@icons.take.secretariats_icon, alt: "secretariat.png"), secretariats_path %>
            <%rescue%>
              <%= link_to image_tag("conference-2.jpg", alt: "logo"),secretariats_path %>
            <%end%>
          </div>
          <div class = "conference_blurb_container">
            <h4><%= link_to "Secretariat", secretariats_path %></h4>
          </div>
        </div>
      </div>
    </div>
    <div class = "conference_column conference_column_1_3">
      <div class = "conference_blurb conference_module conference_heading_text_center">
        <div class = "conference_blurb_content">
          <div class = "conference_blurb_image">
           <%begin%>
              <%= link_to image_tag(@icons.take.alumni_icon, alt: "alumni-icon.png"),alumnis_path %>
            <%rescue%>
              <%= link_to image_tag("conference-3.jpg", alt: "logo"),alumnis_path %>
            <%end%>
          </div>
          <div class = "conference_blurb_container">
            <h4><%= link_to "Alumni", alumnis_path %></h4>
          </div>
        </div>
      </div>
    </div>
    <div class = "conference_column conference_column_1_3">
      <div class = "conference_blurb conference_module conference_heading_text_center">
        <div class = "conference_blurb_content">
          <div class = "conference_blurb_image">
           <%begin%>
              <%= link_to image_tag(@icons.take.galleries_icon, alt: "gallery.png"), home_galleries_path %>
            <%rescue%>
              <%= link_to image_tag("conference-4.jpg", alt: "logo"), home_galleries_path %>
            <%end%>
          </div>
          <div class = "conference_blurb_container">
            <h4><%= link_to "Gallery", home_galleries_path %></h4>
          </div>
        </div>
      </div>
    </div>
    <div class = "conference_column conference_column_1_3">
      <div class = "conference_blurb conference_module conference_heading_text_center">
        <div class = "conference_blurb_content">
          <div class = "conference_blurb_image">
           <%begin%>
              <%= link_to image_tag(@icons.take.history_icon, alt: "history.png"), histories_path %>
            <%rescue%>
              <%= link_to image_tag("conference-5.jpg", alt: "logo"), histories_path %>
            <%end%>
          </div>
          <div class = "conference_blurb_container">
            <h4><%= link_to "History", histories_path %></h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


