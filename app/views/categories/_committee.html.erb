<div class="div_height">
<h1 class="text-center" style="background-color:#404da2;margin-bottom:10px;height: 85px;
padding-top: 17px;color:white;">COMMITEE</h1>

<section class="no-padding" id="portfolio">
        <div class="container-fluid">
            <div class="row no-gutter">
                <% @committees.each do|cmt|%>
                <div class="col-lg-4 col-sm-6">
                    <a href="javascript:void(0)" class="portfolio-box">
                        <%= image_tag  cmt.image_url.url ,class: "img-responsive testimg",style:"padding-bottom:10px;",id:cmt.id%> </a>
                        
                        <div class="modal fade" id="<%=cmt.id%>cmt" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                           <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                  <h2 class="modal-title" id="myModalLabel"><%=cmt.committee_name%></h2>
                                  <%= button_tag "topic_guide", :class => "btn commt_button " %>
                                </div>
                                <div class="modal-body">
                                  
                                  <p><span class="committee_chair">Chair:</span><%=cmt.chair%></p>
                                  <p><span class="committee_chair">Vice Chair:</span><%=cmt.vice_chair%></p>
                                  <div>
                                    <%cmt.topics.each do |topic|%>
                                    <h4><%=topic.topic_name%></h4>
                                    <span class="modal_data"><%= image_tag  topic.image_url.url ,class: "img-responsive ",style:"height:72px; width:85px;" %> 
                                    </span>
                                    <span class="topic_des"><%= topic.description.html_safe%></span>
                                    <%end%>
                                  </div>
                                   

                                </div>
                              </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->       
                </div>
                <%end%>
            </div>
        </div>
    </section>            
</div>
<script type="text/javascript">
$(window).load(function(){
    $('.testimg').on('click',function()
                {    var id =$(this).attr("id")
                    // var sr=$(this).attr('src'); 
                    // $('#mimg').attr('src',sr);
                    $('#'+id+"cmt").modal('show');
                });
});
</script>