    }
  });  

  $(".cmt_button13").click(function(e){
    e.preventDefault();
    var $div = $(this).next('.inquiry-dropdown');
    $(".letter-dropdown").not($div).hide();
    $(".table-dropdown").not($div).hide();
    $(".inquiry-dropdown").not($div).hide();
    $(".sponsor-panel-heading .cmt_button12").css('display', 'block');
    $(".sponsor-panel-heading .cmt_button11").css('display', 'block');
    $(".sponsor-panel-heading .cmt_button13").css('display', 'none');
    $("#inquiry").css({'padding-top': '10%', 'padding-bottom': '10%'});
    if ($div.not(":visible")) {
      $div.show();
    }
  });
});
</script>
