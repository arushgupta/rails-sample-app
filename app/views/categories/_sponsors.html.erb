<div class = "conference row header-title-bg" style = "margin: 2% 0% 3% 0%;">
  <div class="col-lg-12 text-center sponsor-header-img">
    <h2 class = "section-heading"><%= @categories.where(id: params[:id]).take.name %></h2>
    <h3 class = "section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
  </div>
</div>

<section id = "team" class = "bg-light-gray" style = "padding:0px 0px;">
  <div class = "container a faq">
    
    <div class = "row faqtable" style = "margin-top: 5%; margin-bottom: 5%;">
      <div class = "content container faqs">
        <div class = "page-wrapper">
            <div class = "page-content">
              <div class = "row page-row">
                <div class = "faq-wrapper col-md-8 col-sm-7" style = "margin:0 16.5%;">
                  <div class = "panel-group" id = "accordion">
                    <div class = "panel panel-default">
                      <div class = "sponsor-panel-heading dropdown" id = "letter">
                        <%= link_to "Letter to Sponsors", "javascript:void(0)", class: "cmt_button11 panel-title sponsor-tier-title"%>
                        <div style = "display: none;" class = "letter-dropdown">
                          <div class = "panel-body">
                            <div class = "container">
                              <%= @pages.where(name: 'Letter').take.content.html_safe %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class = "page-content">
              <div class = "row page-row">
                <div class = "faq-wrapper col-md-8 col-sm-7" style = "margin:0 16.5%;">
                  <div class = "panel-group" id = "accordion">
                    <div class = "panel panel-default">
                      <div class = "sponsor-panel-heading" id = "table">
                        <%= link_to "Sponsorship Opportunities", "javascript:void(0)", class: "cmt_button12 panel-title sponsor-tier-title"%>
                        <div style = "display: none;" class = "table-dropdown">
                          <div class = "panel-body">
                            <div class="container">
                              <%= @pages.where(name: 'Sponsorship Opportunities').take.content.html_safe %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class = "page-content">
              <div class = "row page-row">
                <div class = "faq-wrapper col-md-8 col-sm-7" style = "margin:0 16.5%;">
                  <div class = "panel-group" id = "accordion">
                    <div class = "panel panel-default">
                      <div class = "sponsor-panel-heading" id = "inquiry">
                        <%= link_to "Further Inquiries", "javascript:void(0)", class: "cmt_button13 panel-title sponsor-tier-title"%>
                        <div style = "display: none;" class = "inquiry-dropdown">
                          <div class = "panel-body">
                            <div class="container">
                              <%= @pages.where(name: 'Further Inquiries').take.content.html_safe %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
$(document).ready(function(){

  $(".cmt_button11").click(function(e){
    e.preventDefault();
    var $div = $(this).next('.letter-dropdown');
    $(".letter-dropdown").not($div).hide();
    $(".table-dropdown").not($div).hide();
    $(".inquiry-dropdown").not($div).hide();
    $(".sponsor-panel-heading .cmt_button13").css('display', 'block');
    $(".sponsor-panel-heading .cmt_button12").css('display', 'block');
    $(".sponsor-panel-heading .cmt_button11").css('display', 'none');
    $("#letter").css({'padding-top': '10%', 'padding-bottom': '10%'});
    if ($div.not(":visible")) {
      $div.show();
    }
  });
  
  $(".cmt_button12").click(function(e){
    e.preventDefault();
    var $div = $(this).next('.table-dropdown');
    $(".letter-dropdown").not($div).hide();
    $(".table-dropdown").not($div).hide();
    $(".inquiry-dropdown").not($div).hide();
    $(".sponsor-panel-heading .cmt_button12").css('display', 'none');
    $(".sponsor-panel-heading .cmt_button11").css('display', 'block');
    $(".sponsor-panel-heading .cmt_button13").css('display', 'block');
    $("#table").css({'padding-top': '10%', 'padding-bottom': '10%'});
    if ($div.not(":visible")) {
      $div.show();
    }
  });  

  $(".cmt_button13").click(function(e){
    e.preventDefault();
    var $div = $(this).next('.inquiry-dropdown');
    $(".letter-dropdown").not($div).hide();
    $(".table-dropdown").not($div).hide();
    $(".inquiry-dropdown").not($div).hide();
    $(".sponsor-panel-heading .cmt_button12").css('display', 'block');
    $(".sponsor-panel-heading .cmt_button11").css('display', 'block');
    $(".sponsor-panel-heading .cmt_button13").css('display', 'none');
    $("#inquiry").css({'padding-top': '10%', 'padding-bottom': '10%'});
    if ($div.not(":visible")) {
      $div.show();
    }
  });
});
</script>
