<div class = "conference row header-title-bg" style = "margin: 2% 0% 3% 0%;">
  <div class="col-lg-12 text-center header-img" style = "background-image: url('/assets/conference-title.jpg'); background-size: cover;">
    <h2 class = "section-heading"><%= @categories.where(id: params[:id]).take.name %></h2>
    <h3 class = "section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
  </div>
</div>

<% case @categories.find(params[:id]).name.downcase! %>
  <% when "about", "about us" %>
    <%= render "about" %>
  <% when "travel" %>
    <%= render "travel" %>
  <% when "sponsors", "sponsorship" %>
    <%= render "sponsors" %>
  <% when "contact", "contact us" %>
    <%= render "contact" %>
  <% else %>
    <%=  render "conference" %>
<% end %>