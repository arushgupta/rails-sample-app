<div class="conference">
  
  <div class = "row header-title-bg" style = "margin: 2% 0% 3% 0%;">
    <div class="col-lg-12 text-center travel-header-img">
      <h2 class = "section-heading"><%= @category.name %></h2>
      <h3 class = "section-subheading text-muted"><%= @category.subheading %></h3>
    </div>
  </div>

  <% if @icons.take.nil? %>
    <div class="col-md-12 coming-soon" >
      <h1 class = "coming-soon-title">Coming Soon :)</h1>
    </div>
  <% else %>
    <div class = "conference_row conference_row_2">
      <div class = "conference_column conference_column_1_3">
        <div class = "conference_blurb conference_module conference_heading_text_center">
          <div class = "conference_blurb_content">
            <div class = "conference_blurb_image">
              <% if @icons.take.training_session_icon.nil? %>
                <%= link_to image_tag(@icons.take.training_session_icon, alt: "logo"), training_sessions_path %>
              <% else %>
                <%= link_to image_tag("training-session-icon.png", alt: "logo"), training_sessions_path %>
                <%end%>
            </div>
            <div class = "conference_blurb_container">
              <h4><%= link_to "Training Sessions", training_sessions_path %></h4>
            </div>
          </div>
        </div>
      </div>
      <div class = "conference_column conference_column_1_3">
        <div class = "conference_blurb conference_module conference_heading_text_center">
          <div class = "conference_blurb_content">
            <div class = "conference_blurb_image">
              <% if @icons.take.travel_conferences_icon.nil? %>
                <%= link_to image_tag(@icons.take.travel_conferences_icon, alt: "logo"), travel_conferences_path %>
              <% else %>
                <%= link_to image_tag("travel-conferences.png", alt: "logo"), travel_conferences_path %>
              <% end %>
            </div>
            <div class = "conference_blurb_container">
              <h4><%= link_to "Upcoming Conferences", travel_conferences_path %></h4>
            </div>
          </div>
        </div>
      </div>

      <%@pages.each do |page|%>
        <div class = "conference_column conference_column_1_3">
          <div class = "conference_blurb conference_module conference_heading_text_center">
            <div class = "conference_blurb_content">
              <div class = "conference_blurb_image">
                <% if page.page_icon_url.url.nil? %>
                  <%= link_to image_tag("page-icon.png", alt: "logo"),page_path(page, id: page) %>
                <% else %>
                  <%= link_to image_tag(page.page_icon_url.url, alt: "logo"),page_path(page, id: page) %>
                <%end%>
              </div>
              <div class = "conference_blurb_container">
                <h4><%= link_to page.name, page_path(page,id: page.id) %></h4>
              </div>
            </div>
          </div>
        </div>
      <%end%>

      <div class = "conference_column conference_column_first conference_column_1_3">
        <div class = "conference_blurb conference_module conference_heading_text_center">
          <div class = "conference_blurb_content">
            <div class = "conference_blurb_image">
              <% if @icons.take.awards_icon.nil? %>
                <%= link_to image_tag(@icons.take.awards_icon, alt: "logo"), awards_path %>
              <% else %>
                <%= link_to image_tag("award.png", alt: "logo"), awards_path %>
              <% end %>
            </div>
            <div class = "conference_blurb_container">
              <h4><%= link_to "Past Conferences And Awards", awards_path %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>

