<div class="conference">
  <div class="row" style = "margin-bottom: 3%; margin-top: 2%;">
    <div class="col-lg-12 text-center header-img" style = "background-image: url('/assets/conference-title.jpg'); background-size: cover;">
      <h2 class = "section-heading">Welcome Letter</h2>
      <h3 class = "section-subheading text-muted">A note of welcome from the Secretary General</h3>
    </div>
  </div>
  <% if @overviews.count.zero? %>
    <div class="col-md-12 coming-soon" >
      <h1 class = "coming-soon-title">Coming Soon :)</h1>
    </div>
  <% else %>
  	<div class = "overview-letter">
  	  <%= @overviews.take.welcome_letter.html_safe %>
  	</div>
  <% end%>
</div>