<div class = "conference row header-title-bg" style = "margin: 2% 0% 3% 0%;">
  <div class="col-lg-12 text-center header-img">
    <h2 class = "section-heading">Frequently Asked Questions</h2>
    <h3 class = "section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
  </div>
</div>


<% if @faqs.count.zero? or Question.group(params[:id]).count.zero? %>
  <div class="col-md-12 coming-soon" >
    <h1 class = "coming-soon-title">Coming Soon :)</h1>
  </div>
<% else %>
  <section id = "team" class = "bg-light-gray" style = "padding:0px 0px;">
    <div class = "container a faq">
      <div class = "row faqtable" style = "margin-top: 5%; margin-bottom: 5%;">
        <%@faqs.each do |faq|%>
        <div class = "content container faqs">
          <div class = "page-wrapper">
            <%faq.questions.each do |question|%>
              <div class = "page-content">
                <div class = "row page-row">
                  <div class = "faq-wrapper col-md-8">
                    <div class = "panel-group" id = "accordion">
                      <div class = "panel panel-default">
                        <div class = "panel-heading dropdown" id = "<%=question.id%>div">
                          <%= link_to question.question, "javascript:void(0)", class: "cmt_button11 faqs-question panel-title" %>
                          <div style = "display: none;" class = "dropdown-container">
                            <div class = "panel-body">
                              <%=question.answer.html_safe%>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <%end%>
          </div>
        </div>
        <%end%> 
      </div>
    </div>
  </section>
<% end %>

<script type="text/javascript">
$(document).ready(function(){

  $(".cmt_button11").click(function(e){
    e.preventDefault();
    var $div = $(this).next('.dropdown-container');
    $(".dropdown-container").not($div).hide();
    if ($div.not(":visible")) {
      $div.show();
    }
  });
});
</script>