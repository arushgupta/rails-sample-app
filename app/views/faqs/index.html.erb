<section id="team" class="bg-light-gray" style="padding:0px 0px;">
 <div class="container a faq" style="">
 <div class="row">
                <div class="col-lg-12 text-center " style="background-image: url('/assets/banner2.jpeg')">
                    <h2 class="section-heading">faq</h2>
                    <!-- <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3> -->
                </div>
    </div> 
    <div class="row faqtable" style="margin-top:40px;" >   
        <%@faqs.each do |faq|%>
        <div class="content container" >
            <div class="page-wrapper">
              <header class="page-heading clearfix faq_header">
                <h1 class="heading-title pull-left " style="color:black;"> </h1>
              </header> 
              <%faq.questions.each do |question|%>
              <div class="page-content">
                <div class="row page-row">
                   <div class="faq-wrapper col-md-8 col-sm-7">                         
                      <div class="panel-group" id="accordion">
                        <div class="panel panel-default">
                          <div class="panel-heading">
                            <h4 class="panel-title " style="margin-top:10px;">
                              <div class="cmt_button11" id="<%=question.id%>">
                              <%= link_to question.question, "javascript:void(0)",class: " ",style:"color:black;"%><i class="fa fa-plus-circle" style="float:right;"></i></div>

                            </h4>
                          </div><!--//pane-heading-->
                          <div style="display:none;" id="<%=question.id%>div">
                            <div class="panel-body">
                              <%=question.answer.html_safe%>
                            </div><!--//panel-body-->
                          </div><!--//panel-colapse-->
                                  
                        </div><!--//panel-->
                      </div>
                    </div>
                  </div>
                </div>
                <%end%>
            </div>
        </div>
        <%end%> 
    
    </div>
  </div>
</section>

<script type="text/javascript">
$(document).ready(function(){
$(".cmt_button11").click(function(){
    var id =$(this).attr("id")
    $("#"+id+"div").toggle();
    
  });
});
</script>