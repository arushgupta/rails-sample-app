<div class = "conference row" style = "margin: 2% 0% 3% 0%;">
  <div class="col-lg-12 text-center about-header-img">
    <h2 class = "section-heading">Alumni</h2>
    <h3 class = "section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
  </div>
</div>

<% if @alumnis.count.zero? %>
  <div class="col-md-12 coming-soon" >
    <h1 class = "coming-soon-title">Coming Soon :)</h1>
  </div>
<% else %>
  <section class="no-padding" id="portfolio">
    <div class="container-fluid">
      <div class="row no-gutter">
        <% @alumnis.each do|alum|%>
          <div class="col-md-4 col-sm-4" style = "width:100%;">    
            <div class="bio-box">
              <div class=" photo col-md-2">
                <%= image_tag  alum.image_url.url ,class: "img-responsive spkimg img-circle", id:alum.id %>
              </div>
              <div class="bio-right col-md-7">
                <div class = "bio-header">
                  <div class = "position-one"><%= alum.name %></div>
                  <div class = "name"><%= alum.major %></div>
                  <div class = "college">
                    <span>Email: </span>
                    <a href = "mailto:<%= alum.email %>">
                      <%= alum.email %>
                    </a>
                  </div>
                </div>
                <div class="bio">
                  <span class="topic_des"><%= alum.bio.html_safe %></span>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </section>
<%end%>
