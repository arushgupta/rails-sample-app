<section id = "team" class = "bg-light-gray" style = "padding: 0px 0px;">
  <div class = "container">
    
    <div class = "row" style = "margin-bottom: 3%; margin-top: 2%;">
      <div class = "col-lg-12 text-center " style = "background-image: url('/assets/conference-title.jpg'); background-size: cover;">
        <h2 class = "section-heading">Alumni</h2>
        <h3 class = "section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    
    <div id = "people-section">
      <div class = "main-low-margin col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 margin-top-100 ">
        <div id = "people-table" class = "row">
          <% @alumnis.each do |alum|%>
            <div class = "col-md-4 col-sm-4">
              <ul class = "people-main">
                <li>
                  <%= image_tag alum.image_url.url, class: "people-img img-responsive" %>
                </li>
                <li class = "less-on-bottom">
                    <span class="people-name"><%= alum.name %></span>
                </li>
                <li class = "less-on-top less-on-bottom">
                  <span class = "people-position"><%= alum.major %></span>
                </li>
                <li class = "less-on-top">
                  <a href = "mailto:<%= alum.email %>">
                    <span class = "alumni-email"><%= alum.email %></span>
                  </a>
                </li>
                <li class = "poeple-description less-on-top">
                  <%= alum.bio.html_safe %>
                </li>
              </ul>
            </div>
          <%end%>
        </div>              
      </div>
    </div>
  </div>
</section>
