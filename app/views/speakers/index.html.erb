<!-- Team Section -->
<section id="team" class="bg-light-gray" style="padding:0px 0px;">
  <div class="container">
    
    <div class="row">
      <div class="col-lg-12 text-center " style = "background-image: url('/assets/conference-title.jpg'); background-size: cover;">
        <h2 class = "section-heading">Speakers</h2>
        <h3 class = "section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    
    <div id="people-section">
      <div class="main-low-margin col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 margin-top-100 ">
        <div id="people-table" class="row">
          <% @speakers.each do |speaker|%>
            <div class="col-md-4 col-sm-4">
              <ul class = "people-main">
                <li><%= image_tag speaker.image_url.url, class: "people-img" %></li>
                <li class = "less-on-bottom">
                    <span class="people-name"><%= speaker.name %></span>
                </li>
                <li class = "less-on-top">
                  <span class = "people-position"><%= speaker.panel %></span>
                </li>
                <li class = "poeple-description"><%= speaker.description.html_safe %></li>
              </ul>
              <ul class = "people-social">
                <li>
                  <a href = "#">
                    <span class = "social-menu-fb">
                      <i class = "fa fa-facebook"></i>
                    </span>
                  </a>
                  <a href = "#">
                    <span class = "social-menu-tw">
                      <i class = "fa fa-twitter"></i>
                    </span>
                  </a>
                  <a href = "#">
                    <span class = "social-menu-in">
                      <i class = "fa fa-linkedin"></i>
                    </span>
                  </a>
                </li>
              </ul>
            </div>
          <%end%>
        </div>              
      </div>
    </div>
  </div>
</section>
