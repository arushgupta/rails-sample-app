
<!-- Team Section -->
    <section id="team" class="bg-light-gray" style="padding:0px 0px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center " style="background-image: url('/assets/banner2.jpeg')">
                    <h2 class="section-heading">Our Speakers</h2>
                    <!-- <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3> -->
                </div>
            </div>
            <div class="row">
               <% @speakers.each do|spk|%>
                <div class="col-sm-4">
                    <div class="team-member">
                     
                      <%= image_tag  spk.image_url.url ,class: "img-responsive  img-circle",id:spk.id%> 
                        
                        <h4><%=spk.name%></h4>
                        <p class="text-muted"><%=spk.panel%></p>
                        <div style="text-align:left;float:left;"><%= spk.description.html_safe%></div>
                        <ul class="list-inline social-buttons">
                            <li><a href="#"><i class="fa fa-twitter"></i></a>
                            </li>
                            <li><a href="#"><i class="fa fa-facebook"></i></a>
                            </li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
           <%end%>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
                </div>
            </div>
        </div>
    </section>
