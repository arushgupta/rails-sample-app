<p id="notice"><%= notice %></p>

<h1>Listing Training Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Committee</th>
      <th>Topic</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Topic guide url</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Subheading</th>
      <th>Page description</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @training_sessions.each do |training_session| %>
      <tr>
        <td><%= training_session.date %></td>
        <td><%= training_session.committee %></td>
        <td><%= training_session.topic %></td>
        <td><%= training_session.description %></td>
        <td><%= training_session.image_url %></td>
        <td><%= training_session.topic_guide_url %></td>
        <td><%= training_session.start_time %></td>
        <td><%= training_session.end_time %></td>
        <td><%= training_session.subheading %></td>
        <td><%= training_session.page_description %></td>
        <td><%= training_session.is_active %></td>
        <td><%= link_to 'Show', training_session %></td>
        <td><%= link_to 'Edit', edit_training_session_path(training_session) %></td>
        <td><%= link_to 'Destroy', training_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

