<nav id = "mainNav" class = "navbar navbar-default navbar-fixed-top affix-top white-bg" style = "background-color: #fff; padding: 1%; -webkit-box-shadow: 0px 0px 7px rgba(0, 0, 0, 0.1);">
  <div class = "container-fluid">
    <div class = "navbar-header">
      <button type = "button" class = "navbar-toggle collapsed" data-toggle = "collapse" data-target = "#bs-example-navbar-collapse-1">
        <span class = "sr-only">Toggle navigation</span>
        <span class = "icon-bar"></span>
        <span class = "icon-bar"></span>
        <span class = "icon-bar"></span>
      </button>
      <a class = "navbar-brand page-scroll brand-name" href = "">UCSD MUN</a>
    </div>
    <div class = "collapse navbar-collapse" id = "bs-example-navbar-collapse-1">
      <ul class = "nav navbar-nav navbar-right">
        <% @categories.each do |category| %>
          <% if category.category_id.nil? %>
            <% sub_cat = Category.where(category_id: category.id) %>
              <% if sub_cat.blank? %>
                <li>
                  <%= link_to category.name, categories_path(id: category.id) %>
                </li>
              <% else %>
                <li class = "dropdown">
                  <a href = "categories?id = <%=category.id%>" class = "dropdown-toggle" data-id = <%=category.id%> >
                    <%=category.name%>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <% sub_cat.each do |c| %>
                      <li><%= link_to c.name, categories_path(id: c.id) %></li>
                    <%end%>
                  </ul>
                </li>
              <%end%>
          <%end%>
        <%end%>            
      </ul>
    </div>
  </div>
</nav>
