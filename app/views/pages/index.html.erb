<% case @categories.where(id: @pages.category_id).take.name.downcase! %>
  <% when "about", "about us", "our club" %>
    <div class = "conference row header-title-bg" style = "margin: 2% 0% 3% 0%;">
  	  <div class="col-lg-12 text-center about-header-img">
    	<h2 class = "section-heading"><%= @pages.name %></h2>
    	<h3 class = "section-subheading text-muted"><%= @pages.subheading %></h3>
  	  </div>
	</div>
  <% when "travel" %>
    <div class = "conference row header-title-bg" style = "margin: 2% 0% 3% 0%;">
  	  <div class="col-lg-12 text-center travel-header-img">
    	<h2 class = "section-heading"><%= @pages.name %></h2>
    	<h3 class = "section-subheading text-muted"><%= @pages.subheading %></h3>
      </div>
	</div>
  <% else %>
    <div class = "conference row header-title-bg" style = "margin: 2% 0% 3% 0%;">
  	  <div class="col-lg-12 text-center header-img">
    	<h2 class = "section-heading"><%= @pages.name %></h2>
    	<h3 class = "section-subheading text-muted"><%= @pages.subheading %></h3>
  	  </div>
	</div>
<% end %>

<%= @pages.content.html_safe %>
