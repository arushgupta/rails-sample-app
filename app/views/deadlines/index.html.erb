<div class = "conference row header-title-bg" style = "margin: 2% 0% 3% 0%;">
  <div class="col-lg-12 text-center header-img">
    <h2 class = "section-heading">Fees and Timeline</h2>
    <h3 class = "section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
  </div>
</div>

<% if @deadlines.count.zero? %>
  <div class="col-md-12 coming-soon" >
    <h1 class = "coming-soon-title">Coming Soon :)</h1>
  </div>
<% else %>
  <div class="container" id="pricing-section">
    <div class="main-low-margin col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 margin-top-100 ">
      <div id="pricing-table" class="row">
        <% @deadlines.each do |dead|%>
          <div class="col-md-4 col-sm-4">
            <ul class="plan-main">
              <li class="plan-name"><%= dead.phase_id %></li>
              <li ><%=dead.date.strftime("%e %B, %Y")%></li>
              <li>
                <span class = "plan-dollar">$</span>
                <span class= "plan-price"><%= dead.fee %></span>
              </li>
              <li>
                <span class = "plan-delegate">Per Delegate</span>
              </li>
              <li class = "plan-info"><%=dead.deadline_info%></li>
              <li class="plan-action">
                <% if dead.date > Date.today%>
                  <a id="<%=dead.id%>" class = "et_pb_button conference_promo_button conference_button button-white-bg" href="">
                    Register Now
                    <span class = "glyphicon glyphicon-chevron-right button-icon-hider"></span>
                  </a>
                <%else%>
                  <a id="<%=dead.id%>" class = "et_pb_button conference_promo_button conference_button button-white-bg thislink" href="">
                    Register Now
                    <span class = "glyphicon glyphicon-chevron-right button-icon-hider"></span>
                  </a>
                <%end%>
              </li>
            </ul>
          </div>
        <%end%>
      </div>              
    </div>
  </div>
<% end %>
